{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"paths": {
			"*": ["./*"],
			"@oh-my-pi/pi-ai": ["./packages/ai/src/index.ts"],
			"@oh-my-pi/pi-ai/*": ["./packages/ai/src/*"],
			"@oh-my-pi/pi-ai/dist/*": ["./packages/ai/src/*"],
			"@oh-my-pi/pi-agent-core": ["./packages/agent/src/index.ts"],
			"@oh-my-pi/pi-agent-core/*": ["./packages/agent/src/*"],
			"@oh-my-pi/pi-coding-agent": ["./packages/coding-agent/src/index.ts"],
			"@oh-my-pi/pi-coding-agent/hooks": ["./packages/coding-agent/src/core/hooks/index.ts"],
			"@oh-my-pi/pi-coding-agent/*": ["./packages/coding-agent/src/*"],
			"@oh-my-pi/pi-git-tool": ["./packages/git-tool/src/index.ts"],
			"@oh-my-pi/pi-git-tool/*": ["./packages/git-tool/src/*"],
			"@sinclair/typebox": ["./node_modules/@sinclair/typebox"],
			"@oh-my-pi/pi-mom": ["./packages/mom/src/index.ts"],
			"@oh-my-pi/pi-mom/*": ["./packages/mom/src/*"],
			"@oh-my-pi/pi-tui": ["./packages/tui/src/index.ts"],
			"@oh-my-pi/pi-tui/*": ["./packages/tui/src/*"],
			"@oh-my-pi/pi-web-ui": ["./packages/web-ui/src/index.ts"],
			"@oh-my-pi/pi-web-ui/*": ["./packages/web-ui/src/*"],
			"@oh-my-pi/pi-agent-old": ["./packages/agent-old/src/index.ts"],
			"@oh-my-pi/pi-agent-old/*": ["./packages/agent-old/src/*"]
		}
	},
	"include": ["packages/*/src/**/*", "packages/*/test/**/*", "packages/coding-agent/examples/**/*"],
	"exclude": ["packages/web-ui/**/*", "**/dist/**"]
}
